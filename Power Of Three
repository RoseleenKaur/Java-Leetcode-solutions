class Solution {
    public boolean isPowerOfThree(int n) {
        return powerOfThree(n);
    }
    private boolean powerOfThree(int n){
        if(n==0)
            return false;
        if(n==1)
            return true;
        
        if(n%3!=0)
            return false;
        else return powerOfThree(n/3);
    }
}
